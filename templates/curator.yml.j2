---
# Remember, leave a key empty if there is no value.  None will be a string,
# not a Python "NoneType"
client:
  hosts: {{ curator_hosts | to_json }}
  port: {{ curator_port }}
  url_prefix: {{ curator_url_prefix }}
  use_ssl: {{ curator_use_ssl | lower }}
  certificate: {{ curator_certificate }}
  client_cert: {{ curator_client_cert }}
  client_key: {{ curator_client_key }}
  ssl_no_validate: {{ curator_ssl_no_validate | lower }}
  username: {{ curator_username }}
  password: {{ curator_password }}
  timeout: {{ curator_timeout }}
  master_only: {{ curator_master_only | lower }}

logging:
  loglevel: {{ curator_log_level }}
  logfile: {{ curator_log_path }}/{{ curator_log_file }}
  logformat: {{ curator_log_format }}
  blacklist: {{ curator_log_blacklist | to_json }}
